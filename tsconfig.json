{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true ,
        "esModuleInterop": true ,
        "skipLibCheck": true ,
        "forceConsistentCasingInFileNames": true ,
        "baseUrl": "./",
        "paths": {
            "*":["node_modules/*","src/types/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}